<Window x:Class="CSProfiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSProfiles"
        mc:Ignorable="d"
        Title="CSProfiles" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="500" MinWidth="300" MinHeight="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.BindingGroup>
            <BindingGroup/>
        </Grid.BindingGroup>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
            <ComboBox Margin="5" VerticalAlignment="Top" MinWidth="70" x:Name="normeCB" DisplayMemberPath="normeName" SelectionChanged="NormeCBChange"/>
            <ComboBox Margin="5" VerticalAlignment="Top" MinWidth="50" x:Name="familyCB" DisplayMemberPath="profileName" SelectionChanged="FamilyCBChange"/>
            <ComboBox Margin="5" Width="Auto" VerticalAlignment="Top" MinWidth="60" x:Name="profilesCB" DisplayMemberPath="profileName" SelectionChanged="ProfilesCBChange"/>
        </StackPanel>
        <ListView Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Margin="5" Padding="5" x:Name="paramProfilesLV">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="Parametr" DisplayMemberBinding="{Binding paramName}" />
                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding paramValue}" />
                    <GridViewColumn Header="Unit"  DisplayMemberBinding="{Binding paramUnit}" />
                </GridView>
            </ListView.View>
        </ListView>
        <GroupBox Grid.Column="2" Grid.Row="3" Header="DXF Options" Margin="0,5,5,5" VerticalContentAlignment="Bottom">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Margin="5" IsChecked="True">Front view</CheckBox>
                    <CheckBox Margin="5" IsChecked="True">Top view</CheckBox>
                    <CheckBox Margin="5" IsChecked="True">Side view</CheckBox>
                </StackPanel>
                <Button Content="Open dxf"  Padding="3" Margin="5"/>
                <Button Content="Save dxf"  Padding="3" Margin="5"/>
            </StackPanel>
        </GroupBox>
        <Image Grid.Column="1" Margin="0,5,5,5" Grid.Row="1" x:Name="imageSection"/>
    </Grid>
</Window>